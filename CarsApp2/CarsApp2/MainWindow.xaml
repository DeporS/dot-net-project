<Window x:Class="CarsApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarsApp2"
        xmlns:interfaces="clr-namespace:Interfaces;assembly=Interfaces"
        xmlns:system="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Name="okno">
    <Window.Resources>
        <ObjectDataProvider x:Key="TransmissionTypeDP"
                            ObjectType="{x:Type system:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="{x:Type interfaces:TransmissionType}"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <DockPanel>
        <ListBox Name="lista"  DockPanel.Dock="Left" ItemsSource="{Binding Cars}"
                 SelectedItem="{Binding SelectedCar}"
                 MinWidth="100">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" BorderBrush="Black">
                       
                        <StackPanel MinWidth="95">
                            <TextBlock Text="{Binding Id}" Margin="2"/>
                            <TextBlock Text="{Binding Name}" Margin="2"/>
                            <TextBlock HorizontalAlignment="Right" Text="{Binding ProdYear}" Margin="2"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" >
            <Button Content="Add New Car" Command="{Binding AddNewCarCommand}" Margin="10"  />
            <Button Content="Save Car" Command="{Binding SaveCarCommand}" Margin="10" />

        </StackPanel>
        <StackPanel>
            <Grid Background="Aqua" DataContext="{Binding SelectedCar}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0">Id</Label>
            
           
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="3">
                    <TextBox  VerticalAlignment="Center" Margin="1"
                             Text="{Binding Id}"></TextBox>
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <Grid>
                            <!--<Border BorderThickness="2" CornerRadius="2" BorderBrush="Orange">
                                <Label>3</Label>
                            </Border>-->
                            <Ellipse Width="20" Height="20" Fill="Red"></Ellipse>
                            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White" Content="3">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="45"/>
                                </Label.LayoutTransform>
                            </Label>
                        </Grid>
                    
                    <Label Foreground="Red" Margin="5,0">Identyfikator nie może być wartością ujemną</Label>
                    </StackPanel>
                </StackPanel>
                <Label Grid.Column="0" Grid.Row="1">Nazwa</Label>
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Name}"></TextBox>

                <Label Grid.Column="0" Grid.Row="2">Producent</Label>
                <ComboBox Grid.Column="1" Grid.Row="2" ItemsSource="{Binding ElementName=okno,Path=DataContext.Producers}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding Producer}"/>
                <!--<TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Producer.Name}"></TextBox>-->

                <Label Grid.Column="0" Grid.Row="3">Rok Produkcji</Label>
                <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding ProdYear}"></TextBox>

                <!--<Label Grid.Column="0" Grid.Row="4">Pojemność silnika</Label>
                <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Engine}"></TextBox>

                <Label Grid.Column="0" Grid.Row="5">Przebieg</Label>
                <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding Mileage}"></TextBox>-->

                <Label Grid.Column="0" Grid.Row="6">Skrzynia biegów</Label>
                <!--<TextBox Grid.Column="1" Grid.Row="6" Text="{Binding Transmission}"></TextBox>-->
                <ComboBox  Grid.Column="1" Grid.Row="6" 
                           ItemsSource="{Binding Source={StaticResource TransmissionTypeDP}}"
                           Text="{Binding Transmission}"></ComboBox>
  

            </Grid>
        </StackPanel>

    </DockPanel>
</Window>
